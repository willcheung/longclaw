<div class="text-center loginscreen animated">
  <div>
       <a href="http://www.contextsmith.com" class="oauth logo"><!-- LOGO --></a>
      <div class="ibox-content middle-box">
      
      	<h1 class="logo-name oauth" style="font-size:19px;">Welcome to ContextSmith!</h1>
      	<p class="oauth">Sign up for a free trial below.<br/>No credit card required.</p>

      	<a class="btn btn-lg btn-primary oauth" href="<%= user_omniauth_authorize_url(:google_oauth2) %>" target="SignIn" onclick="openSignInPopup(this.href, this.target); return false;"><i class="fa fa-google oauth"></i>&nbsp;&nbsp;&nbsp;<span class="bold">Sign Up Using Google</span></a>
  	 
        <p class="m-t-md">Existing users? Click below to log in.</p>
        <a class="btn btn-sm btn-default oauth" href="<%= user_omniauth_authorize_url(:google_oauth2) %>" target="SignIn" onclick="openSignInPopup(this.href, this.target); return false;"><i class="fa fa-google oauth" style="font-size:18px;"></i>&nbsp;&nbsp;&nbsp;<span class="bold">Log in Using Google</span></a>

        <p class="oauth" style="font-size:10px;margin-top:60px;">By clicking sign up, you agree to our <a href="https://www.contextsmith.com/terms/" target="_blank">Terms of Service</a>.</p>
  	</div>

  	<p class="m-t"><small><a href="http://www.contextsmith.com">ContextSmith.com</a> &nbsp;&nbsp;ContextSmith, Inc. Â© 2017</small> </p>
    <p><a target="_blank" href="https://www.contextsmith.com/privacy/">Privacy</a> | <a target="_blank" href="https://www.contextsmith.com/terms/">Terms</a></p>
  </div>
</div>
<script type="text/javascript">
  var popupWindowRef = null;

  var openSignInPopup = function (strUrl, strTarget) {
    var strOptions = "width=700,height=700";
    if (popupWindowRef == null || popupWindowRef.closed) {
      popupWindowRef = window.open(strUrl, strTarget, strOptions);
      // Poll popup window, refresh this page when it is closed
      var pollPopupClosed = window.setInterval(function() {
        if (popupWindowRef.closed) {
          window.clearInterval(pollPopupClosed);
          window.location.reload(true)
        }
      }, 200);
    }
    else {
      popupWindowRef.focus();
    }
  }

</script>
