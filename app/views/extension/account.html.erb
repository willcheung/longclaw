<body>
    <div>
        <span class="contact-group"><br/>PEOPLE IN E-MAIL</span>
    </div>
    <div>
        <div class="panel-group" id="accordion">
            <% @people.each_with_index do |p, i| %>
            <% profile_fullname = p[:fullname].present? ? p[:fullname] : p[:email] %>
            <div class="panel <%= "panel-default" if i == 0 %>" id="Profile<%= p[:id] %>">
                <div>
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseProfile<%= p[:id] %>">
                        <table>
                            <tbody>
                                <tr>
                                    <td>
                                    <% if p[:profileimgurl].present? %>
                                        <img src="<%= p[:profileimgurl] %>" class="profile-pic" title="profile pic">
                                    <% else %>
                                        <%= get_rounded_initials_from_name(profile_fullname, "profile-pic") %>
                                    <% end %>
                                    </td>
                                    <td>
                                        <table>
                                            <tbody class="contact-info">
                                                <tr><td class="contact-name panel-title"><extrastrong><%= profile_fullname %></extrastrong></td></tr>
                                                <tr><td><%= p[:title] %></td></tr>
                                                <tr><td class="company-name"><i class="fa fa-building-o" aria-hidden="true"></i><span class="link" url="http://<%= get_domain(p[:email]) %>">&nbsp;<%= get_domain(p[:email]) %></span></td></tr>
                                            </tbody>
                                        </table>
                                    </td>
                                    <td>
                                        <i class="fa fa-plus-square fa-2x" aria-hidden="true" id="plusProfile<%= p[:id] %>"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </a>
                </div>
                <div id="collapseProfile<%= p[:id] %>" class="panel-collapse collapse <%= "in" if i == 0 %>">
                    <div class="panel-body">
                        <table>
                            <tr>
                                <td>
                                    <table class="social-group">
                                        <tbody>
                                            <tr>
                                                <td class="fa-lg">
                                                    <img src="/assets/images/salesforce.png" class="sfdc-icon disabled"/>
                                                </td>
                                                <td class="linkedin-icon">
                                                    <a href="https://www.linkedin.com/search/results/people/?company=<%= get_domain("placeholder@linkedin.com") %>&keywords=<%= 'Jeff%20Weiner' %>" target="_blank" title="Search contact in LinkedIn"><i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i></a>
                                                </td>
                                                <td class="twitter-icon">
                                                    <i class="fa fa-twitter fa-2x" aria-hidden="true"></i>
                                                </td>
                                                <td class="fb-icon">
                                                    <i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i>
                                                </td>
                                                <td class="phone-icon">
                                                    <table>
                                                        <tr><td>
                                                        <i class="fa fa-phone fa-2x" aria-hidden="true"></i></td><td class="phone-number"><span><%= p[:phone] %></span></td>
                                                    </table>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <table class="emailmtgs-group">
                            <tr>
                                <td>LAST E-MAIL <i class="fa fa-envelope-o" aria-hidden="true"></i></td>
                                <td><extrastrong>Great to see you today!</extrastrong> - Nov 10<br>Opened Nov 10 - 3:32pm</td>
                            </tr>
                            <tr>
                                <td>NEXT MEETING <i class="fa fa-calendar-o" aria-hidden="true"></i></td>
                                <td><a href="#">Schedule Meeting</a></td>
                            </tr>
                            <tr>
                                <td>LAST MEETING <i class="fa fa-calendar-check-o" aria-hidden="true"></i></td>
                                <td><extrastrong>ContextSmith Sales Call</extrastrong><br>Aug 30 - 3:00pm</td>
                            </tr>
                            <tr>
                                <td >ACTIONS</td>
                                <td><a href="https://mail.google.com/mail/?view=cm&authuser=<%= current_user.email %>&to=<%= "somebody.com" %>&su=<%= "My subject" %>&body=<%= "Body" %>" target="GmailCompose" onclick="openGmailComposePopup(this.href, this.target); return false;"> Send e-mail</a>
                                &nbsp;&middot;&nbsp;
                                <a href="#" target="_blank"> Add a Note</a></td>
                            </tr>
                        </table>
                        <table>
                            <tr><td><span class="panel-title"><extrastrong>Activity</extrastrong></span>&nbsp;&nbsp;Last 30 days</td></tr>
                            <tr>
                                <td><table>
                                <!-- TODO: Don't use buttons! -->
                                    <tr>
                                        <td><button><i class="fa fa-envelope-o fa-2x"></i>&nbsp;<span class="statistics">126</span><br/>Sent</button></td>
                                        <td><button><i class="fa fa-envelope-o fa-2x"></i>&nbsp;<span class="statistics">30%</span><br/>Opened</button></td>
                                        <td><button><i class="fa fa-reply fa-2x"></i>&nbsp;<span class="statistics">10</span><br/>Replied</button></td>
                                    </tr>
                                </table></td>
                            </tr>
                        </table>
                    <% if p[:detail].present? %>
                        <table>
                            <tr><td><span class="panel-title"><extrastrong>More about <%= profile_fullname %></extrastrong></span></td></tr>
                            <tr><td>
                            <table>
                                <tr>
                                    <td><%= p[:detail][0...200] %><%= "..." if p[:detail].length > 200 %></td>
                                </tr>
                            </table>
                            </td></tr>
                        </table>
                    <% end %>
                    </div>
                </div>
            </div>
            <% end # end: @people.each do |p| %>
            
            <span class="contact-group"><br/>PEOPLE IN <%= @project.name.upcase %></span>
            
        </div>
    </div>
</body>

