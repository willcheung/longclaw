<style type="text/css">
    body {
        color: #999;
        font-size: 11px;
    }
    extrastrong {
        font-weight: bold;
        color: black;
    }
    td > a {
        text-decoration: underline;
    }
    .contact-group {
        font-size: 11px;
        font-weight: bold;
        /*color: #999;*/
        padding: 2em 0;
    }
    .panel-group {
        border-radius: 0px;
    }
    .panel {
        border: none;
        border-bottom: 2px solid #EEE;
    }
    .profile-pic {
        height: 48px;
        width: 48px;
        border-radius: 48px;
        margin: 12px;
        border: 1.5px solid grey;
        font-size: 22px;
        line-height: 42px;
    }
    .panel-title { /* contact-name */
        font-size: 14px;
    }
    .contact-info {
        font-size: 12px;
        color: #999;
        font-weight: normal;
    }
    .company-name {
        /*font-size: 11px;*/
        color: #337ab7; /* link blue */
    }
    .panel-body {
        padding: 0 8px;
    }
    .panel-body > table {
        margin: 7px;
        width: 98%;
        border-top: 1px solid #EEE; 
        /*border-bottom: 1px solid #EEE; */
        /*border: 2px solid blue;*/
    }
    .social-group {
        margin: 6px 0;
    }
    .social-group td {  /* social icons */
        margin: 0px 3px;
        display: inline-block;
    }
    .fa-plus-square {
        color: #999;
        padding: 0 1em;
        display: none;  /* disabled until we find functionality for the "+" */
    }
    .sfdc-icon {
        width: 1.5em;
    }
    .linkedin-icon {
        color: #0077b5; /* LinkedIn blue */
    }
    .twitter-icon {
        color: #31b8f0; /* Twitter blue */
    }
    .fb-icon {
        color: #3b5998; /* Facebook blue */
    }
    .phone-icon {
        padding: 0 0 0 0.5em;
        /*color: navy;*/
    }
    .phone-number {
        font-size: 12px;
        padding-bottom: 3px;
    }
    .emailmtgs-group td {
        vertical-align: text-top;
    }
    .emailmtgs-group td:first-child {
        padding: 10px 12px 0 0;
        text-align: right;
    }
    button { /* used for easy styling: need to change */
        width: 75px;
        margin: 2px;
        color: grey;
        background-color: white;
        border: 2px solid grey;
        border-radius: 5px;
        pointer-events: none;
    }
    .statistics {
        font-size: 14px;
        font-weight: bold;
    }
</style>

