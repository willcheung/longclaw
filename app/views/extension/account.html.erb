<style type="text/css">
    .titleinfo-group:hover {
        background-color: #EEE;
    }
    td > a, .link {
        text-decoration: underline;
    }
    .contact-group {
        font-size: 12px;
        font-weight: bold;
        /*color: #999;*/
        padding: 2em 0;
    }
    .panel-group {
        border-radius: 0px;
    }
    .panel {
        border: none;
        border-bottom: 2px solid #EEE;
    }
    .titleinfo-group {
        width: 100%;
        margin: 2px 0;
    }
    .panel-title { /* sections; includes contact-name */
        font-size: 14px;
    }
    .arrow { /* .titleinfo-group */
        color: #AAA;
        background-color: transparent;
        padding: 0px 4px;
        font-size: 18px;
        float: right;
        white-space:nowrap;
        transition: 0.4s;
    }
    .arrow-section-expanded {
        transform: translateX(-7px) translateY(25px) rotate(-90deg);
    }
    .arrow-section-collapsed {
        transform: translateX(-7px) translateY(25px);
    }
    .visibility-hidden { /* bootstrap overrides .hidden  */
        visibility: hidden;
    }
    .titleinfo-group .profile-pic-container {
        width: 56px;
    }
    .profile-pic {
        width: 56px;
        height: 56px;
        border-radius: 56px;
        margin: 2px 6px;
        border: 2px solid <%= get_contextsmith_blue %>;
        font-size: 22px;
        line-height: 47px;
    }
    .contact-info {
        font-size: 12px;
        color: #999;
        font-weight: normal;
        overflow-wrap: break-word; 
        word-break: break-all;
    }
    .company-name {
        font-size: 11px;
        color: #337ab7; /* link blue */
    }
    .panel-body {
        padding: 0 10px 15px 10px;
    }
    .panel-body > table {
        width: 98%;
        /*margin: 1em 0;*/
        border-top: 1px solid #EEE; 
        /*border-bottom: 1px solid #EEE; */
        /*border: 2px solid blue;*/
    }
    .social-group td {  /* social icons */
        margin: 7px 3px;
        display: inline-block;
    }
    td.disabled {  /* social icons */
        opacity: .3;
        pointer-events: none;
    }
    /* disabled until we find functionality for the "+" */
    /*.fa-plus-square {
        color: #999;
        padding: 0 1em;
        display: none;   
    }*/
    .sfdc-icon {
        width: 1.5em;
    }
    .linkedin-icon {
        color: #0077b5; /* LinkedIn blue */
    }
    .twitter-icon {
        color: #31b8f0; /* Twitter blue */
    }
    .fb-icon {
        color: #3b5998; /* Facebook blue */
    }
    .globe-icon{
        color: <%= get_contextsmith_blue %>; /* "CS blue" / light blue */
        text-decoration: none;
    }
    .phone-icon {
        padding: 0 0 0 0.5em;
        /*color: navy;*/
    }
    .phone-number {
        font-size: 12px;
        padding-bottom: 3px;
    }
    .activity-group button { /* used for easy styling: need to change */
        width: 75px;
        margin: 1px;
        color: grey;
        background-color: white;
        border: 2px solid grey;
        border-radius: 5px;
        pointer-events: none;
    }
    .activity-group .fa {
        font-size: 16px;
    }
    .statistics {
        font-size: 13px;
        font-weight: bold;
    }
    .extension-timeline-content {
        font-size: 12px;
    }
    div.chosen-container.chosen-container-single {
        width: 100%;
    }
</style>

