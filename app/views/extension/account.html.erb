<style type="text/css">
    body {
        color: #999;
        font-size: 11px;
    }
    extrastrong {
        font-weight: bold;
        color: black;
    }
    .titleinfo-group:hover {
        background-color: #EEE;
    }
    td > a, .link:hover {
        text-decoration: underline;
    }
    .contact-group {
        font-size: 12px;
        font-weight: bold;
        /*color: #999;*/
        padding: 2em 0;
    }
    .panel-group {
        border-radius: 0px;
    }
    .panel {
        border: none;
        border-bottom: 2px solid #EEE;
    }
    .titleinfo-group {
        width: 100%;
        margin: 2px 0;
    }
    .panel-title { /* sections; includes contact-name */
