<style type="text/css">
    body {
        color: #999;
        font-size: 11px;
    }
    extrastrong {
        font-weight: bold;
        color: black;
    }
    td > a, .link:hover  {
        text-decoration: underline;
    }
    .contact-group {
        font-size: 12px;
        font-weight: bold;
        /*color: #999;*/
        padding: 2em 0;
    }
    .panel-group {
        border-radius: 0px;
    }
    .panel {
        border: none;
        border-bottom: 2px solid #EEE;
    }
    .profile-pic {
        height: 48px;
        width: 48px;
        border-radius: 48px;
        margin: 12px;
        border: 1.5px solid grey;
        font-size: 22px;
        line-height: 42px;
    }
    .panel-title { /* contact-name */
        font-size: 14px;
    }
    .contact-info {
        font-size: 12px;
        color: #999;
        font-weight: normal;
    }
    .company-name {
        font-size: 11px;
        color: #337ab7; /* link blue */
    }
    .panel-body {
        padding: 0 15px 15px 15px;
    }
    .panel-body > table {
        width: 98%;
        /*margin: 1em 0;*/
        border-top: 1px solid #EEE; 
        /*border-bottom: 1px solid #EEE; */
        /*border: 2px solid blue;*/
    }
    .social-group td {  /* social icons */
        margin: 7px 3px;
        display: inline-block;
    }
    .fa-plus-square {
        color: #999;
        padding: 0 1em;
        display: none;  /* disabled until we find functionality for the "+" */
    }
    .sfdc-icon {
        width: 1.5em;
    }
    .linkedin-icon {
        color: #0077b5; /* LinkedIn blue */
    }
    .twitter-icon {
        color: #31b8f0; /* Twitter blue */
    }
    .fb-icon {
        color: #3b5998; /* Facebook blue */
    }
    .phone-icon {
        padding: 0 0 0 0.5em;
        /*color: navy;*/
    }
    .phone-number {
        font-size: 12px;
        padding-bottom: 3px;
    }
    .emailmtgs-group td {
        vertical-align: text-top;
    }
    .emailmtgs-group td:first-child {
        /*font-size: 8px;*/
        padding: 10px 12px 0 0;
        text-align: right;
    }
    button { /* used for easy styling: need to change */
        width: 75px;
        margin: 2px;
        color: grey;
        background-color: white;
        border: 2px solid grey;
        border-radius: 5px;
        pointer-events: none;
    }
    .statistics {
        font-size: 14px;
        font-weight: bold;
    }
    .additionalinfo-group td {
        padding: 2px 0;
    }
</style>

