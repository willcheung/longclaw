    }
    .visibility-hidden { /* bootstrap overrides .hidden  */
        visibility: hidden;
    }
    .titleinfo-group .profile-pic-container {
        width: 48px;
    }
    .profile-pic {
        width: 48px;
        height: 48px;
        border-radius: 48px;
        margin: 10px 6px;
        border: 1.5px solid grey;
        font-size: 22px;
        line-height: 42px;
    }
    .contact-info {
        font-size: 12px;
        color: #999;
        font-weight: normal;
    }
    .company-name {
        font-size: 11px;
        color: #337ab7; /* link blue */
    }
    .panel-body {
        padding: 0 10px 15px 10px;
    }
    .panel-body > table {
        width: 98%;
        /*margin: 1em 0;*/
        border-top: 1px solid #EEE; 
        /*border-bottom: 1px solid #EEE; */
        /*border: 2px solid blue;*/
    }
    .social-group td {  /* social icons */
        margin: 7px 3px;
        display: inline-block;
    }
    /* disabled until we find functionality for the "+" */
    /*.fa-plus-square {
        color: #999;
        padding: 0 1em;
        display: none;   
    }*/
    .sfdc-icon {
        width: 1.5em;
    }
    .linkedin-icon {
        color: #0077b5; /* LinkedIn blue */
    }
    .twitter-icon {
        color: #31b8f0; /* Twitter blue */
    }
    .fb-icon {
        color: #3b5998; /* Facebook blue */
    }
    .globe-icon{
        color: #7cb5ec; /* "CS blue" / light blue */
    }
    .phone-icon {
        padding: 0 0 0 0.5em;
        /*color: navy;*/
    }
    .phone-number {
        font-size: 12px;
        padding-bottom: 3px;
    }
    button { /* used for easy styling: need to change */
        width: 79px;
        margin: 1px;
        color: grey;
        background-color: white;
        border: 2px solid grey;
        border-radius: 5px;
        pointer-events: none;
    }
    .statistics {
        font-size: 13px;
        font-weight: bold;
    }
    .additionalinfo-group td {
        padding: 2px 0;
    }
    .extension-timeline-content {
        font-size: 12px;
    }
</style>

