<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Alerts</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_path %>">Home</a>
            </li>
            <li class="active">
                <strong>Alerts</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Issue list</h5>
                    <div class="ibox-tools">
                        <a href="" class="btn btn-primary btn-xs">Add new issue</a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-hover issue-tracker">
                            <tbody>
                              <tr>
                                <td>
                                  complete
                                </td>
                                <td>
                                  category
                                </td>
                                <td class="issue-info">
                                  task
                                </td>
                                <td>
                                  assign to
                                </td>
                                <td>
                                  due date
                                </td>
                                <td class="text-center">
                                  label
                                </td>

                              </tr>
                              <% @notifications.each do |n| %>
                            <tr>
                                <td><input type="checkbox" class="i-checks"></td>
                                <td>

                                    <span class="label label-success"><%= best_in_place n, :category, :as => :select, :collection => Notification::CATEGORY, :class => 'btn btn-outline btn-xs fa-caret-down', :style => 'font-size:12px;' %></span>
                                </td>
                                <td class="issue-info">
                                 
                                  <%= link_to n.name, n %>
                                  <small>
                                   	<%=n.description %>
                                  </small>
                                </td>
                                <td>
                                	<%=n.first_name %> 
                                	<%=n.last_name %>
                                   
                                </td>
                                <td>
                                    <%=n.original_due_date %>
                                </td>
                                <td class="text-right">
                                    <button class="btn btn-white btn-xs"> Tag</button>
                                    <button class="btn btn-white btn-xs"> Mag</button>
                                </td>
                            </tr>
                             <% end %>
                           
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

function handleClick(cb) {
  cb.parent('tr').remove();
}

$(function() {
    $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green'
    });
});


</script>