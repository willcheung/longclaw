<%= simple_form_for([activity, activity.comments.new], remote: true) do |f| %>
  <div class="form-inputs">
	  <%= f.input :comment, label: false, input_html: {:rows => 2}, wrapper_html: { style: 'margin-bottom:5px;' }, :placeholder => 'Write a comment...' %>
	  <input value="<%= current_user.email %>" class="hidden form-control" type="hidden" name="email" id="email">
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Comment", class: "btn btn-xs btn-primary" %>
  </div>
<% end %>
