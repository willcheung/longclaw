<div class="social-comment row">
	<div class="col-sm-1">
		<%= get_profile_pic(get_full_name(c.user), c.user.email, "pull-left m-r-sm") %>
	</div>
	<div class="col-sm-10">
    <% if (c.user == current_user) %>
      <%= best_in_place c, :comment, :as => 'textarea', :place_holder => '(Add text)', :display_with => :simple_format, :inner_class => 'col-sm-12', :ok_button => 'Ok', :ok_button_class => 'btn btn-primary btn-xs', :cancel_button => 'Cancel', :cancel_button_class => 'btn btn-secondary btn-xs' %>
		<% else %>
      <%= simple_format(c.comment) %>
    <% end %>
		<div class="m-t-xs"><small class="text-muted"><%= time_ago_in_words(c.created_at) %> ago</small></div>
	</div>
<% if (c.user == current_user) %>
  <div class="col-sm-1 m-t-xs">
    <%= link_to "<i class=\"fa fa-times\"></i>".html_safe, c, method: :delete, style: "color:#bbb", title: "Remove", data: {confirm: "Are you sure you want to delete this comment?"} %>
  </div>
<% end %>
</div>

