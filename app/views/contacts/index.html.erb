<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Contacts</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= authenticated_root_path %>">Home</a>
            </li>
            <li class="active">
                <strong>Contacts</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        <%= link_to '+ New Contact', '#new_contact_modal', 'data-toggle' => 'modal', 'class' => 'btn btn-primary m-t-lg' %>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover responsive no-wrap" id="contacts-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Account</th>
                                <th>E-mail</th>
                                <th>Projects</th>
                                <th>Last Activity</th>
                                <th>Sent/Recieved Ratio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @contacts.each do |c| %>
                            <tr>
                                <td></td>
                                <td><a href="<%= contact_path(c.id) %>"><%= get_full_name(c) %></a></td>
                                <td><%= c.account.name %></td>
                                <td><%= c.email %></td>
                                <td><%= c.projects.map(&:name).join(', ') %></td>
                                <td><%= time_ago_in_words(c.created_at) + ' ago' %></td>
                                <td><%= (rand(10)/(rand(20)+1).to_f).to_f.round(2) %></td>
                            </tr>
                            <% end %>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>




