<% contact ||= @contact || Contact.new %>
<div class="modal inmodal fade" id="<%= modal_id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <% if modal_id == 'edit_contact_modal' %>
          <h4 class="modal-title">Edit Contact</h4>
        <% else %>
          <h4 class="modal-title">New Contact</h4>
        <% end %>
      </div>
      <div class="modal-body">
        <div class="row">
          <%# Render the new person form (passing modal => true to enable remote => true) %>
          <%= render 'contacts/form', remote: true, modal_id: modal_id, contact: contact %>
        </div>
      </div>
      <% if modal_id == 'edit_contact_modal' %>
        <div class="modal-footer">
          <%= (link_to "Delete contact", contact, method: :delete, data: {confirm: "Contact will be deleted! Are you sure?"}) if contact.present? %>
        </div>
      <% end %>
    </div>
  </div>
</div>