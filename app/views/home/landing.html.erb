                <%= image_tag 'landing/landing_netflix.png' %>
            </div>
            <div class="col-sm-3">
                <%= image_tag 'landing/landing_google.png' %>
            </div>
            <div class="col-sm-3">
                <%= image_tag 'landing/landing_minted.png' %>
