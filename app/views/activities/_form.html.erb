<script type="text/javascript">
  // Auto resize textarea with pop out for button

  $(".activity-input").on("focus keypress input", function () {
    $(this).css('height', 'auto').css('height', Math.max(this.scrollHeight, 93));
  }).blur(function () {
    $(this).css('height', 'auto').css('height', Math.max(this.scrollHeight, 33));
  });

  $('[data-toggle="tab"]').click(function (e) {
    e.preventDefault();
    $(this).tab('show')
  });

</script>
