<%= simple_form_for(Activity.new, remote: true) do |f| %>
    <div class="input-group">
      <span class="input-group-btn top">
        <button class="sticky-bg note-btn" disabled="true">
          <i class="fa fa-sticky-note"></i>
        </button>
      </span>
      <%= f.input :note, label: false, as: 'text', input_html: { style: 'resize:none;border:none;overflow:hidden;', data: "autoresize", rows: "1" }, placeholder: "Add a note..." %>
    </div>
  <input value="<%= project_id %>" class="hidden form-control" type="hidden" name="project_id" id="project_id">
<% end %>
<script type="text/javascript">
  $("#activity_note").keyup( function () {
    if ($(this).val()) {
      $(".note-btn")[0].disabled = false;
    }
    else {
      $(".note-btn")[0].disabled = true;
    }
  });

  $(".new_activity").submit( function () {
    $(".note-btn")[0].disabled = true;
    $("#activity_note").height(20);
  });
</script>