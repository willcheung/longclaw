<div class="vertical-timeline-block">
    
    <% if a.category == "Conversation" %>
        <div class="vertical-timeline-icon primary-bg">
            <i class="fa fa-envelope"></i>
        </div>
    <% elsif a.category == "Note" %>
        <div class="vertical-timeline-icon sticky-bg">
            <i class="fa fa-sticky-note"></i>
        </div>
    <% end %>
    
    <span class="vertical-date left"><%= Time.zone.at(a.last_sent_date).strftime("%b %d") %><br />
        <small><%= Time.zone.at(a.last_sent_date).strftime("%l:%M%P") %></small>
    </span>

    <div class="vertical-timeline-content"
        <% if a.category == "Note" %> style="background-color: #fff7db" <% end %>
    >
        <% if a.category == "Conversation" %>
            <h3><%= a.title %>
                <small class="m-l-md"><%= get_conversation_member_names(a.from, a.to, a.cc) %></small>
                <% if not_in_current_user_inbox(a) %><span id="not-in-inox"><i class="fa fa-eye pull-right" style="font-size:14px;" data-toggle="tooltip" data-placement="top" data-original-title="Not from your inbox"></i></span><% end %>
                <% if !a.is_public %><span id="private"><i class="fa fa-lock pull-right" style="color:#ed5565" title="Private"></i></span><% end %>
            </h3>

            <div class="chat-discussion">
                <% if a.email_messages.size > 1 %>
                    <div class="more-messages">
                        <a class="show-more-<%= a.id.to_s %>"><i class="fa fa-plus-square"></i> &nbsp; <%= pluralize((a.email_messages.size - 1), 'older message') %></a>
                    </div>
                <% end %>

                <% a.email_messages.each do |m| %>
                    <div class="hidden-chat-message-<%= a.id.to_s %>"  <% if a.email_messages.last != m %> style="display:none;" <% end %>>
                        <div class="chat-message <%= is_internal_domain?(m.from[0].address) ? "left" : "right" %>">
                            <%= get_profile_pic(m.from[0].personal, m.from[0].address, "message-avatar") %>
                            <div class="message">
                                <span class="message-author" href="#"> <%= m.from[0].personal %> </span> to <%= get_conversation_member_names([], m.to, m.cc, "All") %>
                                <span class="message-date"><%= Time.zone.at(m.sentDate).strftime("%b %d") %></span>
                                <hr class="message-divider"/>
                                    <span class="message-content">
                                         <div>
                                            <%= simple_format(m.content) %>
                                        </div>
                                    </span>
                            </div>
                        </div>
                    </div>
                <% end %>

                <div class="col-4-lg action-links">
                  <%= best_in_place a, :is_pinned, :as => 'checkbox', :data => {:activity => a}, collection: {false: raw("<a id=\"pin-link\">Pin it</a>"), true: raw("<strong><a id=\"pin-link\"><i class=\"fa fa-thumb-tack\"></i> Pinned</a></strong>")}, :class => 'pin' %>
                  &sdot; <a class="comment-link-<%= a.id %>">Comment</a>
                  &sdot;
                    <%= best_in_place a, :is_public, :as => 'checkbox', :data => {:activity => a}, :class => 'toggle-private', collection: {
                      false: raw('<strong><a><i class="fa fa-lock"></i> Private</a></strong>'),
                      true: raw('<a>Mark Private</a>')
                    }  %>
                </div>
            </div> <!-- chat discussion -->
        
        <% elsif a.category == "Note" %>
            <div class="chat-discussion">
                <div class="row">
                    <div class="col-xs-11">
                        <% if (a.user == current_user) %>
                            <%= best_in_place a, :note, :as => 'textarea', :place_holder => '(Add text)', :display_with => :simple_format, :inner_class => 'col-sm-12', :ok_button => 'Ok', :ok_button_class => 'btn btn-primary btn-xs', :cancel_button => 'Cancel', :cancel_button_class => 'btn btn-secondary btn-xs' %>
                        <% else %>
                            <%= simple_format(a.note) %>
                        <% end %>
                    </div>
                    <% if a.user == current_user %>
                        <div class="col-xs-1 m-t-xs">
                            <%= link_to "<i class=\"fa fa-times\"></i>".html_safe, a, method: :delete, style: "color:#bbb", title: "Remove", data: {confirm: "Are you sure you want to delete this note?"} %>
                        </div>
                    <% end %>
                </div>
                <div class="col-4-lg action-links">
                    <%= best_in_place a, :is_pinned, :as => 'checkbox', :data => {:activity => a}, collection: {false: raw("<a id=\"pin-link\">Pin it</a>"), true: raw("<strong><a id=\"pin-link\"><i class=\"fa fa-thumb-tack\"></i> Pinned</a></strong>")}, :class => 'pin' %>
                     &sdot; <a class="comment-link-<%= a.id %>">Comment</a> 
                </div>
            </div>
        <% end %>
        
        <div class="content-footer footer-<%= a.id %>">
            
            <% a.comments.each do |c| %>
                <% if !(c.nil? or c.user.nil?) %>
                    <%= render "comments/comment", :c => c %>
                <% end %>
            <% end %>

            <div class="social-comment form-<%= a.id %> row" style="display:none;">
                <div class="col-sm-1">
                    <%= get_profile_pic(get_full_name(current_user), current_user.email, "") %>
                </div>
                <div class="col-sm-11">
                    <%= render 'comments/form', :activity => a %>
                </div>
            </div>
        </div>

    </div>
</div>

<%= render 'activities/show_more_js', :a => a %>
