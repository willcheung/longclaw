$('#activity_note').val("");
$('#activity_note').height(20);
$('#vertical-timeline').prepend('<%= escape_javascript(render "activities/timeline_block", a: @activity) %>');
$('.btn-note')[0].disabled = true;
$('.vertical-timeline-block').first().hide().show("blind", {direction: "up"}, 1000);
// event handler for best_in_place activator for editing on Notes added with AJAX
$('#note-<%= @activity.id %>-activator').on('click.activate', function () {
  // only trigger once, remove once clicked
  $(this).off('click.activate');
  // for some reason, best_in_place field needs to be clicked once before activator will work
  $(this).parent().prev().find(".best_in_place").click()
  // trigger best_in_place normally
  $(this).click();
});