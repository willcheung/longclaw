<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-site-verification" content="lYpMze2-1jWr2lS6A0jbsMRtWFfHfvBK-dYSUBOocCE" />
    <title>ContextSmith | Account Based Intelligence Platform</title>

    <!-- Include style per-controller - vendor plugins -->
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= stylesheet_link_tag "https://cdn.datatables.net/1.10.10/css/dataTables.bootstrap.min.css" %>
    <%= stylesheet_link_tag params[:controller] if ::Rails.application.assets.find_asset("#{params[:controller]}.css") %>

    <!-- Main css styles -->
    <%= stylesheet_link_tag 'application', media: 'all' %>

    <!-- Main javascript files -->
    <%= javascript_include_tag 'application' %>
    <!-- load jquery-ui.js before bootstrap.js -->
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js" %>
    <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/d3-legend/1.10.0/d3-legend.min.js" %>
    <!--< %= javascript_include_tag "https://code.highcharts.com/highcharts.js" %>-->
    <%= javascript_include_tag "https://code.highcharts.com/stock/highstock.js" %>
    <%= javascript_include_tag "https://code.highcharts.com/modules/heatmap.js" %>
    <%= javascript_include_tag "https://code.highcharts.com/modules/no-data-to-display.js" %>

    <!-- More javascript files -->
    <%= javascript_include_tag "https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js" %>
    <%= javascript_include_tag "https://cdn.datatables.net/plug-ins/1.10.10/sorting/custom-data-source/dom-checkbox.js" %>
    <%= javascript_include_tag "https://cdn.datatables.net/1.10.10/js/dataTables.bootstrap.min.js" %>
    <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js" %>
    <%= csrf_meta_tags %>

    <% if Rails.env.production? %>
        <!-- Google Tag Manager -->
        <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-PW3DCFF');</script>
        <!-- End Google Tag Manager -->
    <% end %>
    
    <!-- Chrome Extension -->
    <link rel="chrome-webstore-item" href="https://chrome.google.com/webstore/detail/idihnnlkpfggfgjinfiodninabjggfop">

</head>
<body class="top-navigation">

    <% if Rails.env.production? %>
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PW3DCFF"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->
    <% end %>

    <!-- Wrapper-->
    <div id="wrapper" class="<%= params[:controller] %>.<%= params[:action] %>">

        <!-- Page wraper -->
        <div id="page-wrapper" class="gray-bg <%= @extra_class %>">

            <%= render 'layouts/topnavbar' %>

            <!-- Main view  -->
            <%= yield %>

        </div>
        <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->

    <!-- Toastr flash retrofit -->
    <%= custom_toastr_flash %>

    <!-- Include javascript per-controller - vendor plugins -->
    <%= javascript_include_tag params[:controller] if ::Rails.application.assets.find_asset("#{params[:controller]}.js") %>

    <!-- Include javascript per-view -->
    <%= yield :javascript %>
    
</body>
</html>
