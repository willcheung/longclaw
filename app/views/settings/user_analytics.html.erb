<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>User Analytics Settings</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_path %>">Home</a>
            </li>
            <li class="active">
                <strong>Settings</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
 <% @users.each do |org, users| %>
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <h1><%= best_in_place org, :name, :as => 'input' %>
                
                // Is Active? <%= best_in_place org, :is_active, :as => 'checkbox', :data => {:organization => org}, collection: {false: raw('<i class="fa fa-square-o bip_activator"></i>'), true: raw('<i class="fa fa-check-square-o bip_activator"></i>')}%>
                </h1>
                <div id="<%=org.name%>-container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                <table class="table table-striped table-bordered table-hover responsive no-wrap" id="users-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Last Page Visited</th>
                            <th>Clicked</th>
                            <th>Changed</th>
                            <th>Submitted</th>
                            <th></th>
                            <th>Last Activity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.each do |u| %> 
                        <tr>
                            <td></td>
                            <td><%= get_full_name(u) %></td>
                            <td><%= u.email %></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                       <% end %> 
                </table>
            </div>
        </div>
  <% end %> 
</div>

<% @institution.each do |org| %>
<script>

Highcharts.chart('<%=org['name']%>-container', {
    chart: {
        type: 'areaspline'
    },
    title: {
        text: 'Average Active Usage in two weeks'
    },
    legend: {
        layout: 'vertical',
        align: 'left',
        verticalAlign: 'top',
        x: 150,
        y: 100,
        floating: true,
        borderWidth: 1,
        backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
    },
    xAxis: {
        categories: [
            'Monday',
            'Tuesday',
            'Wednesday',
            'Thursday',
            'Friday',
            'Saturday',
            'Sunday',
            'Monday',
            'Tuesday',
            'Wednesday',
            'Thursday',
            'Friday',
            'Saturday',
            'Sunday'
        ],
        plotBands: [{ // visualize the weekend
            from: 4.5,
            to: 6.5,
            color: 'rgba(68, 170, 213, .2)'
        }]
    },
    yAxis: {
        title: {
            text: 'Activity'
        }
    },
    tooltip: {
        shared: true,
        valueSuffix: ' units'
    },
    credits: {
        enabled: false
    },
    plotOptions: {
        areaspline: {
            fillOpacity: 0.5
        }
    },
    series: [{
        name: 'Support',
        data: [3, 4, 3, 5, 4, 10, 12, 3, 4, 3, 5, 4, 10, 12]
    }, {
        name: 'Service',
        data: [1, 3, 4, 3, 3, 5, 4, 1, 3, 4, 3, 3, 5, 4]
    }, {
      name: 'Engineering',
      data: [1, 1, 2, 1, 2, 4, 3, 1, 1, 2, 1, 2, 4, 3]
    }]
});

</script>
<%end%>