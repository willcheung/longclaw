<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Salesforce Settings</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_path %>">Home</a>
            </li>
            <li>
                <a href="<%= settings_path%>">Settings</a>
            </li>
            <li class="active">
                <strong>Salesforce</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <h1> Salesforce Integration </h1>
            <% if @salesforce_user.nil?%> <a class="btn btn-primary btn-sm"  style="font-size:12px;" href="<%=user_omniauth_authorize_url(:salesforce)%> ">Login to Salesforce</a>
            <a class="btn btn-primary btn-sm"  style="font-size:12px;" href="/users/auth/salesforcesandbox">Login to Salesforce Sandbox</a> <br>
            Must be a Salesforce admin. Please contact <a href="mailto:support@contextsmith.com?subject=Salesforce%20Integration%20Setup" target="_blank">support@contextsmith.com</a> for setup instructions.
            <% else %>
              <div class="row col-lg-12" style="margin-right:0px; margin-left:3px; margin-bottom:15px; padding:0px; display: inline;"> 
                <div class="contextsmith_account col-lg-3" style="margin-right:0px; margin-left:0px; padding:0px; display: inline;">
                  <select class="contextsmith_account_box" data-placeholder="Select Contextsmith Account">
                    <option value="0"></option>
                    <% if !@accounts.nil?  %>
                      <% @accounts.each do |a| %>
                        <option value="<%=a.id %>"><%=a.name %></option>
                      <% end %>
                    <% end  %>
                  </select>
                </div>
                <div class="salesforce_account col-lg-3" style="margin-right:0px; margin-left:15px; padding:0px; display: inline;">
                  
                  <%= form_tag("/link_salesforce/", :method => "post", id: "search-form", class: "fix-height", remote: false) do %>
                    <div class="col-lg-11">
                      <input type="search" name="salesforce_id" id="salesforce-search" class="contacts z-top salesforce-search" placeholder="Link to a Salesforce Account">
                    </div>
                    <input name="account_id" type="hidden" value="">     
                    <div class="col-lg-1" style="margin:0px; padding-left:0px; padding-top:3px;">                      
                      <input type="submit" name="commit" value="Link" class="btn btn-primary btn-sm">            
                    </div>                  
                  <%end%>
                </div>
              </div>

              <table class="table table-striped table-bordered table-hover responsive no-wrap" id="users-table" cellspacing="0" width="100%">
                  <thead>
                      <tr>
                          <th style="padding-top:15px;">ContextSmith Account</th>
                          <th>
                              <div style="padding-top:15px; display: inline; margin-right:5px;"><%="Salesforce Account ("+@salesforce_user.oauth_user_name + ')' %></div>                              
                              <div class="salesforce-refresh btn btn-sm btn-primary btn-outline "> <i class="fa fa-refresh"></i> Refresh</div>
                  <i class="fa fa-question-circle text-primary"data-toggle="tooltip" data-placement="top" data-original-title="Retrieve latest accounts from salesforce."></i>
                              <a class="btn btn-danger btn-sm pull-right"  style="font-size:12px;" href="/salesforce/disconnect/<%=@salesforce_user.id %>">Disconnect</a>
                              
                            </th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @salesforce_link_accounts.each do |a| %>
                      <tr>
                        <td class="col-lg-2"><%= a.account.name %></td>
                        <td class="col-lg-6"><%= a.salesforce_account_name %>
                          <a href="/delete_salesforce_account/<%=a.id%>"><i class="delete-note fa fa-trash-o pull-right text-mute-gray" style="font-size:14px;" data-toggle="tooltip" data-placement="top" data-original-title="Delete this link"></i></a>
                        </td>

                      </tr>
                    <% end %>
                  </tbody>
              </table>
            <%end%>
        </div>
    </div>
</div>

<script>

$('.contextsmith_account_box').on('change',function(evt,params){
  if(params){
    $(".salesforce_account").show();
    $('input[name=account_id]').val(params["selected"]);
  }
  else{
    $('input[name=account_id]').val('');
    $(".salesforce_account").hide();
  }    
});

function removeSpin() {
  $('.fa.fa-refresh').removeClass('fa-spin');
  // $('.salesforce-refresh').removeAttr("disabled"); 
}

$('.salesforce-refresh').click(function(){
  // $.ajax({url:'/salesforce_refresh'});

  $.ajax('/salesforce_refresh', {
        async: true
    });
  $('.fa.fa-refresh').addClass('fa-spin');
  // $('.salesforce-refresh').attr("disabled", "disabled");
  setTimeout(removeSpin, 30000);

  return;

});
</script>