<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Salesforce Integration</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_path %>">Home</a>
            </li>
            <li>
                <a href="<%= settings_path%>">Settings</a>
            </li>
            <li class="active">
                <strong>Salesforce Integration</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <% if @salesforce_user.nil?%> <a class="btn btn-primary btn-sm" style="font-size:12px" href="<%=user_omniauth_authorize_url(:salesforce)%>">Login to Salesforce</a>
            <a class="btn btn-primary btn-sm" style="font-size:12px" href="/users/auth/salesforcesandbox">Login to Salesforce Sandbox</a> <br>
            Must be a Salesforce admin. Please contact <a href="mailto:support@contextsmith.com?subject=Salesforce%20Integration%20Setup" target="_blank">support@contextsmith.com</a> for setup instructions.
            <% else %>
              <!-- Salesforce nav to Account / Opportunities -->
              <nav class="navbar navbar-default">
                  <!-- Collect the nav links, forms, and other content for toggling -->
                  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                      <li><a href="<%= settings_salesforce_path %>">Step 1: Map Accounts</a></li>
                      <li><a href="<%= settings_salesforce_opportunities_path %>">Step 2: Map Opportunities</a></li>
                      <li class="active"><a href="<%= settings_salesforce_activities_path %>">Step 3: Map Activities</a></li>
                      <li><a href="<%= settings_salesforce_fields_path %>">Step 4: Map Fields</a></li>
                    </ul>
                  </div>
              </nav>

              <div>
                <span style="font-size:15px;font-weight:bold;padding-right:1em">Salesforce Activities Filter</span>
                <span>
                  <table class="table table-striped table-bordered table-hover responsive no-wrap">
                    <thead>
                      <tr>
                        <th>Salesforce Entity</th>
                        <th style="width:85%">Predicate (SOQL)&nbsp;<i class="fa fa-question-circle text-primary" data-toggle="tooltip" data-placement="top" data-original-title="Directly injected into the Salesforce query when retrieving Activities."></i></th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td><label style="font-weight:normal" for="salesforce-activity-entity-predicate-textarea">Account / Opportunity</label></td>
                        <td>
                          <div>
                            <input id="salesforce-activity-entity-predicate-customconfig-id" type="hidden" value="<%= @entity_predicate.id %>">
                            <textarea id="salesforce-activity-entity-predicate-textarea" rows="2" cols="80" placeholder="e.g., Id = '0099900000A0aAwAAA'" /><%= @entity_predicate.config_value %></textarea>
                            <span>
                              <button id="salesforce-activity-save-entity-predicate-btn" class="btn btn-primary btn-outline" style="vertical-align: top;" disabled> <i class="fa fa-floppy-o"></i></button>
                            </span>
                          </div>
                        </td>
                      </tr>
                      <tr>
                        <td><label style="font-weight:normal" for="salesforce-activity-activityhistory-predicate-textarea">ActivityHistory</label></td>
                        <td>
                          <div>
                            <input id="salesforce-activity-activityhistory-predicate-customconfig-id" type="hidden" value="<%= @activityhistory_predicate.id %>">
                            <textarea id="salesforce-activity-activityhistory-predicate-textarea" rows="2" cols="80" placeholder="e.g., NOT(ActivitySubtype = 'Email' OR Subject like '%email%')" /><%= @activityhistory_predicate.config_value %></textarea>
                            <span>
                              <button id="salesforce-activity-save-activityhistory-predicate-btn" class="btn btn-primary btn-outline" style="vertical-align: top" disabled> <i class="fa fa-floppy-o"></i></button>
                            </span>
                          </div>
                        </td>
                      </tr>
                    </tbody>
                    <tfoot>
                      <tr>
                        <td>Query Preview</td>
                        <td><span class="well" id="salesforce-activity-query-preview" style="line-height: 1.5; display:inline-block; margin-bottom: 0">-</span></td>
                      </tr>
                    </tfoot>
                  </table>
                </span>
              </div>
              <div style="width:97.5%;margin:0 auto">
                <p style="border-bottom:2px dotted #CCC"></p>
              </div>
              <div>
                <span style="font-size:15px;font-weight:bold;padding-right:1em">Stream and Activities Mapping</span>
                <table class="table table-striped table-bordered table-hover responsive no-wrap" id="users-table" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th style="vertical-align: bottom">ContextSmith Stream</th>
                            <th>
                              <span style="vertical-align: bottom; margin-right:5px">Salesforce Activities</span>
                              <span style="display: inline-block;">
                                <div>
                                  <span id="salesforce-activity-refresh" class="btn btn-sm btn-primary btn-outline" btnLabel="Refresh ContextSmith Activities" style="width: 18em;"><i class="fa fa-refresh"></i> Refresh ContextSmith Activities</span>
                                  <i class="fa fa-question-circle text-primary" data-toggle="tooltip" data-placement="top" data-original-title="Retrieve latest Activities from Salesforce."></i>
                                </div>
                                <% if @super_admin.include?(current_user.email) %>
                                  <div>
                                <% else %>
                                  <div style="display: none">
                                <% end %>
                                  <span id="salesforce-activity-cs-export" class="btn btn-sm btn-primary btn-outline" btnLabel="Update Salesforce ActivityHistory" style="width: 18em;"><i class="fa fa-refresh"></i> Update Salesforce ActivityHistory</span>
                                  <i class="fa fa-question-circle text-primary" data-toggle="tooltip" data-placement="top" data-original-title="Export latest ContextSmith Activities to Salesforce."></i>
                                </div>
                              </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @streams.each do |s| %>
                        <tr>
                          <td class="col-lg-5"><a href="<%= project_path(s) %>"><%= s.name %></a></td>
                          <% if s.salesforce_opportunity.nil? %>
                            <% if s.account.salesforce_accounts.empty? %>
                              <td class="col-lg-7">Not linked</td>  
                            <% else %>
                              <td class="col-lg-7">Linked to SFDC Account: <%= s.account.salesforce_accounts.map{|n| n.salesforce_account_name}.join(', ') %></td>
                            <% end %>
                          <% else %>
                            <td class="col-lg-7">Linked to SFDC Opportunity: <%= s.salesforce_opportunity.name %></td>
                          <% end %>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
              </div>
            <%end%>
        </div>
    </div>
</div>

<style>
  .btn:disabled {
    color: white;
    background-color: grey;
  }
</style>
<script>
    function handle_updating_SOQL_query(event) {
        if (event) {
            if (event.target.id == "salesforce-activity-entity-predicate-textarea") {
                type = "entity";
            }
            else {
                type = "activityhistory";
            }
           
            $("#salesforce-activity-save-"+type+"-predicate-btn").prop("disabled",false);
            $("#salesforce-activity-save-"+type+"-predicate-btn").removeClass('green-fadeto-grey');  // remove green highlight animation of a previously successful query save, even while in mid-animation
        }

        // Reset button style to initial state
        $("#salesforce-activity-refresh").removeClass('success-btn-highlight error-btn-highlight');
        $("#salesforce-activity-refresh").addClass('btn-primary btn-outline');
        $("#salesforce-activity-refresh").html("<i class='fa fa-refresh'></i> Refresh ContextSmith Activities")
        $("#salesforce-activity-cs-export").removeClass('success-btn-highlight error-btn-highlight');
        $("#salesforce-activity-cs-export").addClass('btn-primary btn-outline');
        $("#salesforce-activity-cs-export").html("<i class='fa fa-refresh'></i> Update Salesforce ActivityHistory")
        
        // Update the SOQL query preview
        entity_predicate = document.getElementById("salesforce-activity-entity-predicate-textarea").value.trim();
        activityhistory_predicate = document.getElementById("salesforce-activity-activityhistory-predicate-textarea").value.trim();

        if (entity_predicate != "")
            entity_predicate = " AND (" + entity_predicate + ")";

        if (activityhistory_predicate != "")
            activityhistory_predicate = " AND (" + activityhistory_predicate + ")";
        
        $("#salesforce-activity-query-preview").html("SELECT Name, (select Id, ... FROM ActivityHistories WHERE (NOT(ActivitySubType = 'Task' AND Subject LIKE 'ContextSmith ——%'))" + activityhistory_predicate + ") FROM SalesforceEntity WHERE Id='sfdc_id'" + entity_predicate);
    }

    $(document).ready(function() {
        handle_updating_SOQL_query(); // set initial query preview

        $('#salesforce-activity-entity-predicate-textarea,#salesforce-activity-activityhistory-predicate-textarea').keyup(handle_updating_SOQL_query);
    });
</script>