<div id="loader" class="overlay-loader">
	<div class="loader-background color-flip"></div>
	<img class="loader-icon spinning-cog" src="<%= image_path('cogs/cog20.svg') %>" data-cog="cog20">

  <div class="credits">
    <h1>Hang tight!</h1>
    <h1> We're still processing your e-mails and finding insights.</h1><br>
    <h3>This may take a few more minutes. We'll send you an e-mail to <span style="color:#fff;font-weight:500"><%= current_user.email %></span> to let you know when we're done.</h3>
  	<h3>You may close this window now.</h3>
  </div>
</div>

<script>
window.onload = setupRefresh;

function setupRefresh() {
  setTimeout("refreshPage();", 10000);
}
function refreshPage() {
   window.location = location.href;
}
</script>