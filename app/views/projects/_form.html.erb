<% remote ||= false %>
<%= simple_form_for @project, remote: remote, html: {role: :form, 'data-model' => 'project'} do |f| %>

  <%# Added Bootstrap classes, and help-block container for error messages %>
  
    <div class="col-xs-12">
      <%= f.input :name %>
      <span class="help-block" style="color:red"></span>
    </div>
  
    <%= f.input :account_id, wrapper_html: { class: 'col-xs-10'}, collection: @account_names, selected: @project.account.nil? ? @account_names[0] : @project.account.id %>
    <%= best_in_place @project, :is_public, :as => 'checkbox', collection: {false: raw("<input type=\"checkbox\" class=\"is_public-switch\" />"), true: raw("<input type=\"checkbox\" class=\"is_public-switch\" checked/>")}, :class => 'switch col-xs-2' %>

  <%# Added Bootstrap classes %>
  <div class="actions pull-right">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>

<% end %>