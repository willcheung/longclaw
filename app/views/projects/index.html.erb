<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Projects</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_path %>">Home</a>
            </li>
            <li class="active">
                <strong>Projects</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        <%= link_to '+ New Project', '#new_project_modal', 'data-toggle' => 'modal', 'class' => 'btn btn-primary m-t-lg' %>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInUp">
    <div class="row">
        <div class="col-lg-9">
            <% if @projects.empty? %>
                <div class="text-center">
                    <h3>This is where your projects will show up once you add them.</h3>
                    <%= link_to 'Create New Project', '#new_project_modal', 'data-toggle' => 'modal', 'class' => 'btn btn-primary' %>
                </div>
            <% else %>
                <div class="row">
                    <div class="col-lg-12 projects">
                        <!-- account, projects -->
                        <% @projects.each do |account,projects| %>
                            <div class="clear">
                                <h2><%= account.name %></h2>
                                <!-- projects -->
                                <% projects.each do |p| %>
                                    <div class="col-lg-12">
                                        <div class="ibox-content" style="padding-bottom:5px;">
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    <h3><a href="<%= project_path(p) %>"><%= p.name %></a></h3>
                                                </div>
                                                <div class="col-sm-2">
                                                    <p class="text-center">Conversations<br/> <strong>125</strong></p>
                                                </div>
                                                <div class="col-sm-2">
                                                    <p class="text-center">Last Activity<br/> <strong><%= time_ago_in_words(p.created_at) %> ago</strong></p>
                                                </div>
                                                <div class="col-sm-2">
                                                    <p class="text-center">Pinned Items<br/> <strong>2 <i class="fa fa-level-up text-info"></i></strong></p>
                                                </div>
                                                <div class="col-md-3 team-members">
                                                    <a href="#"><img alt="member" class="img-circle" src="<%= image_path('a1.jpg') %>"></a>
                                                    <a href="#"><img alt="member" class="img-circle" src="<%= image_path('a2.jpg') %>"></a>
                                                    <a href="#"><img alt="member" class="img-circle" src="<%= image_path('a3.jpg') %>"></a>
                                                    <a href="#"><img alt="member" class="img-circle" src="<%= image_path('a2.jpg') %>"></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% end %>
                                <!-- projects -->
                            </div>
                        <% end %>
                        <!-- end account, projects -->
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-lg-3">
            <div class="row m-t-md">
                <h3>Filter by:</h3>
                <div class="col-lg-12 m-t-sm">
                    <div class="btn-group">
                        <div class="font-bold m-b-xs">Project Status:</div>
                        <button class="btn btn-sm btn-white" type="button">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;All&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
                        <button class="btn btn-sm btn-default" type="button">&nbsp;&nbsp;&nbsp;Active&nbsp;&nbsp;&nbsp;</button>
                        <button class="btn btn-sm btn-white" type="button">Archived</button>
                    </div>
                </div>
            
                <div class="col-lg-12 m-t-lg">
                    <div class="btn-group">
                        <div class="font-bold m-b-xs">Project Role:</div>
                        <button class="btn btn-sm btn-white" type="button">I'm Project Owner</button>
                        <button class="btn btn-sm btn-default" type="button">&nbsp;&nbsp;&nbsp;&nbsp;I'm Member&nbsp;&nbsp;&nbsp;&nbsp;</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%= render 'projects/modal', modal_id: 'new_project_modal' %>
