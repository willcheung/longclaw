
<% if pinned_activities.empty? %>
  <div class="p-m m-l white-bg">
    <h4 class="text-center">You don't have any Pinned Items for this project!</h4>
    <h4 class="text-center">Click on the <span class="label label-primary">Pin it</span> button at the bottom of each conversation or note to pin the important ones here.</h4>
  </div>
<% else %>
    <table class="table pinned-table table-condensed table-hover white-bg">
        <tbody>
                <% pinned_activities.each do |a| %>
                    <%= render 'activities/pinned', a: a %>
                <% end %>
        </tbody>
    </table>
<% end %>
<script type="text/javascript">
    $("#pinned-link").parent().addClass("active");
</script>
