<div class="modal inmodal fade" id="<%= modal_id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <% if modal_id == 'edit_project_modal' %>
              <h4 class="modal-title">Edit Stream</h4>
            <% else %>
              <h4 class="modal-title">New Stream</h4>
            <% end %>
        </div>

        <% remote ||= false %>
        <%= simple_form_for @project, remote: remote, html: {role: :form, 'data-model' => 'project'} do |f| %>
            <div class="modal-body">
              <div class="row">
                <%# Render the new stream form (passing modal => true to enable remote => true) %>
                <%= render 'projects/form', f: f, modal_id: modal_id %>
              </div>
            </div>
              <div class="modal-footer">            

                <% if modal_id == 'edit_project_modal' %>
                    <%= f.submit 'Update Stream', class: 'btn btn-primary pull-left form-group' %>
                    <%= link_to "Delete stream", @project, method: :delete, data: {confirm: "All conversations and notes in this Stream will be deleted! Are you sure?"} %>
                <% else %>  
                   <%= f.submit 'Create Stream', class: 'btn btn-primary pull-left form-group' %>
                  <%= f.submit 'Custom Stream', class: 'btn btn-secondary pull-left' %>
                <% end %>   
              </div>
        <% end %>
    </div>
  </div>
</div>

<script>
    /* Switchery */
    var elem = document.querySelector('.is_public-switch');
    new Switchery(elem);
    $('.best_in_place.switch').bind("ajax:success", function () { new Switchery($(this).children('.is_public-switch')[0], { }); });
</script>
