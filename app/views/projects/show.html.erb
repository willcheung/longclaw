            <%= render 'pinned_tab', pinned_activities: @pinned_activities if params[:action] == "pinned_tab" %>
            <%= render 'notifications/project' if params[:action] == "tasks_tab" %>
            <%= render 'arg_tab', project_id: @project.id if params[:action] == "arg_tab" %>
