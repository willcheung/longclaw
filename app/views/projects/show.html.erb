                        <h5>Risk Score</h5>
                    </div>
                    <div class="metric-content" align="center">
                        <h3><%= @project_risk_score %></h3>
                    </div>
                </div>
            </div>
            <div class="col-xs-4">
                <div class="metric text-danger">
                    <div class="metric-title" align="center">
                        <h5>Open Smart Tasks</h5>
                    </div>
                    <div class="metric-content" align="center">
                        <h3><%= @project_open_tasks_count %></h3>
                    </div>
                </div>
            </div>
            <div class="col-xs-2">
                <div class="metric">
                    <div class="metric-title" align="center">
                        <h5>Status</h5>
                    </div>
                    <div class="metric-content" align="center">
                      <div class="large-circle rag-circle<%=@project_rag_status%>"></div>
                    </div>
