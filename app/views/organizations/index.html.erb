<script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js"></script>
<p id="notice"><%= notice %></p>

<h1>Organizations<span class="pull-right"><%= link_to 'Add Organization', new_organization_path, class: 'btn btn-primary' %></span></h1>

<div id="organizations">
  <form class="form-inline" href="#">

<input class="form-control search" placeholder="Filter" />
    <button class="form-control btn btn-xs sort" data-sort="name">
    Sort by name
  </button>
     <button class="form-control btn btn-xs sort" data-sort="domain">
    Sort by domain
  </button>
  </form>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Domain</th>
      <th>Plan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="list">
    <% @organizations.each do |organization| %>
      <tr>
        <td class="name"><%= organization.name %></td>
        <td class="domain"><%= organization.domain %></td>
        <td class="plan"><%= organization.plan_id %></td>
        <td><%= link_to 'Show', organization, class: 'btn btn-outline btn-primary' %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization), class: 'btn btn-outline btn-primary' %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, class: 'btn btn-outline btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
<script>
  var options = {
  valueNames: [ 'name', 'domain' ]
};

var orgList = new List('organizations', options);
$('#organizations form').submit(function(f) { f.preventDefault(); return false; });
</script>

