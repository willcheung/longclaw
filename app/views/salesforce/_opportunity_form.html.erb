<div class="entity-group container">
    <div id="sfdc-opp-form-title">
        <div class="entity-title" style="padding: 0"><br/>Salesforce Opportunity</div>
    </div>
    <table>
        <tr><td><input type="hidden" id="sfo_id" value="<%= @salesforce_opportunity.id %>"></td></tr>
        <tr><td><label for="salesforce_opportunity_id">Id</label></td></tr>
        <tr><td><input type="text" id="salesforce_opportunity_id" class="disabledinput" value="<%= @salesforce_opportunity.salesforce_opportunity_id %>" onkeyup="changedValue('opportunity')"></td></tr>
        <tr><td><label for="owner_id">Owner Id</label></td></tr>
        <tr><td><input type="text" id="owner_id" class="disabledinput" value="<%= @salesforce_opportunity.owner_id %>" onkeyup="changedValue('opportunity')"></td></tr>
        <tr><td><label for="name">* Name</label></td></tr>
        <tr><td><input type="text" id="name" value="<%= @salesforce_opportunity.name %>" onkeyup="changedValue('opportunity')"></td></tr>
        <tr><td><label for="stage_name">Stage</label></td></tr>
        <tr><td><select data-placeholder="Select a stage" id="stage_name" onchange="changedValue('opportunity')">
          <% if @opportunity_stages.blank?  %>
            <option value="nil" disabled>--No stages available--</option>
          <% else %>
            <% @opportunity_stages.each do |a| %>
              <option value="<%= a %>" <%= "selected" if a == @salesforce_opportunity.stage_name %>><%= a %></option>
            <% end %>
          <% end %>
        </select></td></tr>
        <tr><td><label for="close_date">* Close Date (mm/dd/yyyy)</label></td></tr>
        <tr><td><input type="text" id="close_date" value="<%= @salesforce_opportunity.close_date %>" onkeyup="changedValue('opportunity')"></td></tr>
        <tr><td><label for="probability">Probability</label></td></tr>
        <tr><td><input type="text" id="probability" value="<%= @salesforce_opportunity.probability %>" onkeyup="changedValue('opportunity')"></td></tr>
        <!-- <tr><td><label for="expected_revenue">Expected revenue</label></td></tr>
        <tr><td><input type="text" id="expected_revenue" value="<%= @salesforce_opportunity.expected_revenue %>" onkeyup="changedValue('opportunity')"></td></tr> -->
        <tr><td><label for="amount">Amount</label></td></tr>
        <tr><td><input type="text" id="amount" value="<%= @salesforce_opportunity.amount %>" onkeyup="changedValue('opportunity')"></td></tr>
        <tr><td><label for="forecast_category_name">Forecast category</label></td></tr>
        <tr><td><select data-placeholder="Select a forecast category" id="forecast_category_name" onchange="changedValue('opportunity')">
          <% if @opportunity_forecast_categories.blank?  %>
            <option value="nil" disabled>--No forecast categories available--</option>
          <% else %>
            <% @opportunity_forecast_categories.each do |a| %>
              <option value="<%= a %>" <%= "selected" if a == @salesforce_opportunity.forecast_category_name %>><%= a %></option>
            <% end %>
          <% end %>
        </select></td></tr>

        <tr><td><label>* = required field</label></td></tr>
        
        <tr><td class="button-td"><button id="update_opportunity" class="btn btn-primary btn-sm update_salesforce" disabled="disable">Update&nbsp;<img id="sfdc-icon" src="/assets/images/salesforce.png" style="width:30px;"/></button></td></tr>
    </table>
</div>