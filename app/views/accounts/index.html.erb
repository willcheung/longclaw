<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Accounts</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= root_path %>">Home</a>
            </li>
            <li class="active">
                <strong>Accounts</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        <%= link_to '+ New Account', '#new_account_modal', 'data-toggle' => 'modal', 'class' => 'btn btn-primary m-t-lg' %>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInUp">
    <div class="row">
        <div class="col-sm-12">
            <% if @accounts.empty? %>
                <div class="text-center">
                    <h3>This is where your customer accounts will show up once you add them.</h3>
                    <%= link_to 'Create New Account', '#new_account_modal', 'data-toggle' => 'modal', 'class' => 'btn btn-primary' %>
                </div>
            <% else %>
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover responsive no-wrap" id="accounts-table" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Account Name</th>
                                    <th>Projects</th>
                                    <th>Inactive (days)</th>
                                    <th>Website</th>
                                    <th>Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @accounts.each do |a| %>
                                <tr>
                                    <td><a href="<%= account_path(a.id) %>"><%= a.name %></a><a class="pull-right edit" href="<%= edit_account_path(a) %>" style="display: none;"><i class="fa fa-pencil"></i></a></td>
                                    <td><%= a.projects.size %></td>
                                    <td><%= @account_last_activity[a.id].nil? ? "N/A" : ((Time.now - @account_last_activity[a.id])/86400).to_i %></td>
                                    <td><%= a.website %></td>
                                    <td><%= a.address %></td>
                                </tr>
                                <% end %>
                        </table>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<%= render 'accounts/modal', modal_id: 'new_account_modal' %>




