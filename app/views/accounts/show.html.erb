<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-lg-10">
		<h2><%= @account.name %>&nbsp;&nbsp;&nbsp;&nbsp;<a href="#edit_account_modal" data-toggle="modal" class="btn btn-white btn-xs">Edit Account</a></h2>
		<ol class="breadcrumb">
			<li>
				<a href="<%= root_path %>">Home</a>
			</li>
			<li>
				<a href="<%= accounts_path %>">Accounts</a>
			</li>
			<li class="active">
				<strong><%= @account.name %></strong>
			</li>
		</ol>
	</div>
	<div class="col-lg-2">
		<%= link_to '+ New Account', '#new_account_modal', 'data-toggle' => 'modal', 'class' => 'btn btn-primary m-t-lg' %>
	</div>
</div>

<div class="row">
	<div class="col-lg-9">
		<div class="wrapper wrapper-content animated fadeInUp">
			<div class="ibox">
				<div class="ibox-title">
					<div class="row">
						<div class="col-md-12">
							<div class="vdivide">
								<div class="row vdivide">
									<div class="col-sm-4 text-center">
										<span>Last Activity</span>
										<strong><%= time_ago_in_words(@account.created_at) + ' ago' %></strong>
									</div>
									<div class="col-sm-4 text-center">
										<strong>123</strong>
										<span>Conversations</span>
									</div>
									<div class="col-sm-4 text-center">
										<strong>Inactive</strong>
										<span>State</span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="ibox-content">
					<div class="row m-lg m-t-xs">
						 	<div class="col-md-2">
						 		<div class="m-t-md pull-right">
						 			<strong>Active Projects:</strong>
						 		</div>
						 	</div>
						 	
						 	<div class="col-md-10">
			          <ul class="todo-list medium-list m-t">
			          		<% unless @active_projects.blank? %>
					        	<% @active_projects.each do |p| %>
					              	<li>
					              		<div class="col-lg-7"><a href="<%= project_path(p) %>"><%= p.name %></a></div>
					              		<div class="col-lg-3"><small><%= rand(12..80) %> conversations</small></div>
					              		<div class="col-lg-offset-0 text-right m-r-sm"><small>active <%= rand(60) %>d ago</small></div>
					              	</li>
					             <% end %>
					        <% else %>
					        	<p class="m-t-md">None, but you can <a href="#">create one</a>.</p>
					        <% end %>

			          </ul>
		          </div>
					</div>

					<div class="row">
						<div class="col-lg-12">
							<div class="panel blank-panel">
								<div class="panel-heading">
									<div class="panel-options">
										<ul class="nav nav-tabs">
											<li class="active"><a href="#contacts" data-toggle="tab">Contacts</a></li>
										</ul>
									</div>
								</div>

								<div class="panel-body">

									<div class="tab-content">

										<div class="tab-pane active" id="contacts">
											<div class="table-responsive">
												<table class="table table-striped table-hover">
													<thead>
														<tr>
															<th>Name</th>
															<th>Title</th>
															<th></th>
															<th>Email</th>
															<th>Last Communication</th>
														</tr>
													</thead>
													<tbody>
														<% @account_contacts.each do |contact| %>
														<tr>
															<td><a href="<%= contact_path(contact) %>" class="client-link"><%= get_full_name(contact) %></a></td>
															<td><%= contact.title %></td>
															<td class="contact-type"><i class="fa fa-envelope"> </i></td>
															<td><%= contact.email %></td>
															<td class="client-status"><%= rand(100) %> days ago</td>
														</tr>
														<% end %>
													</tbody>
												</table>
											</div>

										</div>
									</div>

								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-3">
		<div class="wrapper wrapper-content project-manager">

			<div class="m-t-md"><strong>Account Description:</strong></div>
			<% if @account.description.nil? or @account.description.empty? %>
			<small><a href="">(Add description)</a></small>
			<% else %>
			<%= @account.description %>
			<% end %>

			<ul class="list-group clear-list m-t-sm">
				<li class="list-group-item first-item">
					<strong>Status:</strong>
					<span class="label label-primary pull-right">Active</span>
				</li>
				<li class="list-group-item first-item">
					<strong>Account Owner:</strong>
					<span class="pull-right"><%= get_full_name(@account.user) %></span>
				</li>
				<li class="list-group-item">
					<strong>Company Phone:</strong>
					<span class="pull-right"><%= @account.phone %></span>
				</li>
				<li class="list-group-item">
					<strong>Website:</strong>
					<span class="pull-right"> <a href="#" class="text-navy"><%= @account.website %></a> </span>
				</li>
				<li class="list-group-item m-b-sm">
					<strong>Address:</strong>
					<span class="pull-right"> <%= @account.address %> </span>
				</li>
				<a href=""><img alt="image" src="https://maps.googleapis.com/maps/api/staticmap?center=World+Trade+Center,New+York,NY&zoom=13&size=260x150&maptype=roadmap&markers=color:green%7Clabel:G%7C40.711614,-74.012318"></a>
					<li class="list-group-item small m-t-md first-item">
						<span class="pull-right"><%= @account.updated_at.to_formatted_s(:long) %></span>
						Last Updated:
					</li>
					<li class="list-group-item small">
						<span class="pull-right"><%= @account.created_at.to_formatted_s(:long) %></span>
						Created:
					</li>
				</ul>

			</div>
		</div>
	</div>

	<%= render 'modal', modal_id: 'edit_account_modal' %>
