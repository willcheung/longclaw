console.log('<%= params[:type] %>');
<% if params[:type] == 'daily' %>

  $('#project-index-follow-daily-<%= @project.id %>').replaceWith('<%= link_to "<i class=\"fa fa-check\"></i> Following Daily".html_safe, project_project_subscriber_path(project_id: @project.id, user_id: current_user.id) + "?type=daily", remote: true, method: :delete, id: "project-index-unfollow-daily-#{@project.id}", class: "block m-b-xs" %>');
  $('#project-show-follow-daily-<%= @project.id %>').replaceWith('<%= link_to "<i class=\"fa fa-check\"></i> Following Daily".html_safe, project_project_subscriber_path(project_id: @project.id, user_id: current_user.id) + "?type=daily", remote: true, method: :delete, id: "project-show-unfollow-daily-#{@project.id}", class: "btn btn-primary btn-sm btn-outline m-l-md m-t-n-sm" %>');

<% else %> // weekly

  $('#project-index-follow-weekly-<%= @project.id %>').replaceWith('<%= link_to "<i class=\"fa fa-check\"></i> Following Weekly".html_safe, project_project_subscriber_path(project_id: @project.id, user_id: current_user.id) + "?type=weekly", remote: true, method: :delete, id: "project-index-unfollow-weekly-#{@project.id}", class: "block" %>');
  $('#project-show-follow-weekly-<%= @project.id %>').replaceWith('<%= link_to "<i class=\"fa fa-check\"></i> Following Weekly".html_safe, project_project_subscriber_path(project_id: @project.id, user_id: current_user.id) + "?type=weekly", remote: true, method: :delete, id: "project-show-unfollow-weekly-#{@project.id}", class: "btn btn-primary btn-sm btn-outline m-t-n-sm" %>');

<% end %> 