$('#ps-length').text(Number($('#ps-length').text()) + Number("<%= @project_subscribers.length %>"));
$('#search-subs')[0].selectize.clear();
<% @project_subscribers.each do |ps| %>
$('.project-people.subs').append('<%= escape_javascript(render "project_subscribers/subscriber", ps: ps) %>')
<% end %>
<% if @self_subscribe %>
$('#follow-<%= @project.id %>').replaceWith('<%= link_to "<i class=\"fa fa-check\"></i> Following".html_safe, project_project_subscriber_path(project_id: @project.id, user_id: current_user.id), remote: true, method: :delete, id: "follow-#{@project.id}" %>');
<% end %>
